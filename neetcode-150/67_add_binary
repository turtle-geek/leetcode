#include <string>
#include <algorithm>

class Solution {
public:
    std::string addBinary(std::string a, std::string b) {
        /**
         * Time Complexity: O(n) for iterating through the longest string
         * Space Complexity: O(1) for fixed number of variables
         */
        int carry = 0;
        std::string res = "";
        
        reverse(a.begin(), a.end());
        reverse(b.begin(), b.end());
        int max_len = std::max(a.length(), b.length());
        for(int i = 0; i < max_len; i++){
            int digit_a;
            int digit_b;
            if(i < a.length()){
                digit_a = a[i] - '0';
            } else {
                digit_a = 0;
            }
            if(i < b.length()){
                digit_b = b[i] - '0';
            } else {
                digit_b = 0;
            }

            int total = digit_a + digit_b + carry;
            char ch = (total % 2) + '0';
            res = ch + res;
            carry = total/2;
        }
        if (carry == 1) {
            res = '1' + res; 
        }
        return res;
    }
};