/*
// Definition for a Node.
class Node {
public:
    int val;
    vector<Node*> neighbors;
    Node() {
        val = 0;
        neighbors = vector<Node*>();
    }
    Node(int _val) {
        val = _val;
        neighbors = vector<Node*>();
    }
    Node(int _val, vector<Node*> _neighbors) {
        val = _val;
        neighbors = _neighbors;
    }
};
*/

#include <vector>
#include <queue>
#include <unordered_map>

class Solution {
public:
    Node* cloneGraph(Node* node) {
        /**
         * Time Complexity: O(V + E) for V nodes and E edges
         * Space Complexity: O(V) for nodes in hashmap
         */
        if (!node) {
            return nullptr;
        }
        
        unordered_map<Node*, Node*> visited_map;

        queue<Node*> q;

        Node* clone_node = new Node(node->val);
        visited_map[node] = clone_node;

        q.push(node);

        while (!q.empty()) {
            Node* current_original = q.front();
            q.pop();

            Node* current_clone = visited_map[current_original];

            for (Node* neighbor_original : current_original->neighbors) {
                if (visited_map.find(neighbor_original) == visited_map.end()) {
                    Node* neighbor_clone = new Node(neighbor_original->val);
                    visited_map[neighbor_original] = neighbor_clone;
                    q.push(neighbor_original);
                    current_clone->neighbors.push_back(neighbor_clone);
                    
                } else {
                    Node* neighbor_clone = visited_map[neighbor_original];
                    current_clone->neighbors.push_back(neighbor_clone);
                }
            }
        }
        return clone_node; 
    }
};